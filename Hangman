import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;
import java.util.Scanner;

public class Hangman {

	public static void main(String[] args) throws FileNotFoundException {

		Scanner allWords = new Scanner(new File("C:\\Users\\xcx1819\\words_alpha.txt"));
		Scanner sc = new Scanner(System.in);

		List<String> words = new ArrayList<>();

		while (allWords.hasNext()) {
			words.add(allWords.nextLine());
		}

		boolean playAgain = true;
		int correctScore = 0;
		int wrongScore = 0;
		while (playAgain) {
			Random rand = new Random();
			String word = words.get(rand.nextInt(words.size()));

			System.out.println(
					"Notice: Typing in a letter the word does not contain, will decrease your remaining tries by 1."
							+ " Good luck Soldier");
			System.out.println("Remaining tries: 6");
			System.out.println("");

			List<Character> playerGuesses = new ArrayList<>();
			int wrongCount = 0;
			
			while (true) {
				if (wrongCount >= 6) {
					System.out.println("Ya lost");
					System.out.println("The word was: " + word);
					wrongScore++;
					System.out.println("Your stats:\n Wins: " + correctScore + " Losses: " + wrongScore);
					printHangman(wrongCount);
					break;
				}

				boolean correct = printWordsState(word, playerGuesses);
				if (correct) {
					correctScore++;
					System.out.println("Ya win!");
					System.out.println("Your stats:\n Wins: " + correctScore + " Losses: " + wrongScore);
					break;
				}

				if (!getPlayerGuess(sc, word, playerGuesses)) {
					wrongCount++;
					printHangman(wrongCount);
					System.out.println("Remaining tries: " + (6 - wrongCount));
				}
			}

			System.out.println("Do you want to play again? (y/n)");
			String playAgainInput = sc.next();
			if (!playAgainInput.equalsIgnoreCase("y")) {
				playAgain = false;
			}
		}
	}


	public static boolean getPlayerGuess(Scanner sc, String word, List<Character> playerGuesses) {
	//	ArrayList<String> allLetters = new ArrayList<>();

		System.out.println("Please enter a letter");
		String letterGuess = sc.next();

		playerGuesses.add(letterGuess.charAt(0));
		return word.contains(letterGuess);
	}

	private static boolean printWordsState(String word, List<Character> playerGuesses) {
		int correctCount = 0;
		for (int i = 0; i < word.length(); i++) {
			if (playerGuesses.contains(word.charAt(i))) {
				System.out.print(word.charAt(i));
				correctCount++;
			} else {
				System.out.print("_ ");
			}
		}
		System.out.println();
		System.out.println("Used letters: " + playerGuesses.toString());
		return (word.length() == correctCount);
	}

	private static void printHangman(int wrongCount) {
		switch (wrongCount) {
		case 0:
			System.out.println("|-----|");
			System.out.println("|      ");
			System.out.println("|      ");
			System.out.println("|      ");
			break;
		case 1:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     ðŸ˜€");
			System.out.println("|      ");
			System.out.println("|      ");
			break;
		case 2:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     ðŸ˜€");
			System.out.println("|     |");
			System.out.println("|      ");
			System.out.println("|      ");
			System.out.println("|      ");
			break;
		case 3:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     ðŸ˜€");
			System.out.println("|    /|");
			System.out.println("|      ");
			System.out.println("|      ");

			break;
		case 4:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     ðŸ˜€");
			System.out.println("|    /|\\");
			System.out.println("|      ");
			System.out.println("|      ");
			System.out.println("|      ");
			break;
		case 5:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     ðŸ˜€");
			System.out.println("|    /|\\");
			System.out.println("|    / ");
			break;
		case 6:
			System.out.println("|-----|");
			System.out.println("|     |");
			System.out.println("|     â˜¹");
			System.out.println("|    /|\\");
			System.out.println("|    / \\");
			break;
		default:
			System.out.println("Invalid wrong count");
			break;
		}	
	}
}
